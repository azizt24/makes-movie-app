{
  "env": {
    "es2021": true,
    "node": true,
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "**/*.test.js",
    "**/*.spec.js",
    "tests/",
    "__tests__/",
  ],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-unused-vars": ["warn"],
    "no-undef": "error",
  },
}
